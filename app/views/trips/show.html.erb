<div class="container">
  <h1 class="p-5 text-center"><strong><%= @trip.name %></strong></h1>

  <div class="row">
    <div class="col-8">
      <% if @plans.exists? %>
        <% @plans.each do |plan| %>
            <div class="cardtrip my-3" style="width: 50rem;">
                <div class="">
                  <h5 class="cardtrip-title"><%= plan.place.name %></h5>
                  <p class="cardtrip-text"><%= plan.suggestion %></p>
                  <p class="cardtrip-text"><%= plan.place.price %></p>
                  <%= link_to 'Deletar esta atração', place_plan_path(plan_id: plan.id, place_id: plan.place_id), method: :delete, data: { turbo_method: :delete, confirm: "Tem certeza que deseja deletar?" }, class: "btn btn-outline-dark rounded-pill" %>
                </div>
              </div>
        <% end %>
      <% end %>
    </div>

      <div class="col-4">
        <div style="width: 100%; height: 100%;"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
    </div>
  </div>
<%= link_to "Colocar mais atrações", root_path, class: "m-3 btn btn-outline-primary rounded-pill" %>
<%= link_to "Lista dos seus roteiros", trips_path, class: "m-3 btn btn-outline-primary rounded-pill" %>
<%= link_to 'Adicionar amigos', new_group_membership_path(@group), class: "m-3 btn btn-outline-primary rounded-pill" %>
<%= link_to 'Deletar roteiro', trip_path, method: :delete, data: { turbo_method: :delete, confirm: "Tem certeza que deseja deletar?" }, class: "m-3 btn btn-outline-primary rounded-pill" %>
