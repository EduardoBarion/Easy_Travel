<div class="container">
  <h1 class="p-5 text-center" style="color: #161D6F; font-size: 3em;"><strong><%= @trip.name %></strong></h1>
  <div class="row m-3">
    <div class="col-8">
      <% if @plans.exists? %>
        <% @plans.each do |plan| %>

          <div class="cardtrip for-icon my-3" style="width: 50rem;">
            <div >
              <h5 class="cardtrip-title"><%= plan.place.name %></h5>
              <%= link_to place_plan_path(plan_id: plan.id, place_id: plan.place_id), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Tem certeza que deseja deletar?" } do %>
                <i class="fa-solid fa-x"></i>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <div class="col-4">
      <div style="width: 100%; height: 97%;"
           data-controller="map"
           data-map-markers-value="<%= @markers.to_json %>"
           data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
  <%= link_to countries_path, class: "m-3 btn btn-outline-primary rounded-pill" do %>
    <i class="fa-solid fa-plus"></i> Adicionar atrações
  <% end %>
  <%= link_to new_group_membership_path(@group), class: "m-3 btn btn-outline-primary rounded-pill", data: { "bs-toggle" => "modal", "bs-target" => "#exampleModal" } do %>
    <i class="fa-solid fa-user-plus"></i> Adicionar um amigo
  <% end %>
  <%= link_to trips_path, class: "m-3 btn btn-outline-primary rounded-pill" do %>
    <i class="fa-solid fa-list"></i> Lista dos seus roteiros
  <% end %>
  <%= link_to trip_path, method: :delete, data: { turbo_method: :delete, confirm: "Tem certeza que deseja deletar?" }, class: "m-3 btn btn-outline-primary rounded-pill" do %>
  <i class="fa-regular fa-trash-can"></i> Deletar roteiro
<% end %>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Adicionar amigo ao seu roteiro</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
              <%= render "groups/form", membership: @membership, group: @group %>
          </div>
      </div>
    </div>
  </div>
</div>
