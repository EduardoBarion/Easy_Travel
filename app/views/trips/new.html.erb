<div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
  <div class="container p-4" style="max-width: 600px; background-color: rgba(255, 255, 255, 0.9); border-radius: 15px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <h2 class="text-center mb-4" style="font-family: 'Arial', sans-serif; color: #4a4a4a;">Create Your Travel Itinerary</h2>

    <%= simple_form_for @trip do |f| %>
      <div class="form-group">
        <%= f.input :name, label: 'Itinerary Name:', input_html: { class: 'form-control', style: 'border-radius: 8px; padding: 10px;' } %>
      </div>

      <div class="form-group">
        <%= f.input :date_start, label: 'Departure Date:', as: :string, input_html: { type: 'date', class: 'form-control', style: 'border-radius: 8px; padding: 10px;' } %>
      </div>

      <div class="form-group">
        <%= f.input :date_end, label: 'Return Date:', as: :string, input_html: { type: 'date', class: 'form-control', style: 'border-radius: 8px; padding: 10px;' } %>
      </div>

      <div class="text-center mt-4">
        <%= button_tag(type: 'submit', class: 'btn btn-primary mx-2', style: 'padding: 10px 20px; border-radius: 25px;') do %>
          <i class="fa-solid fa-plus"></i> Create New Itinerary
        <% end %>
        <%= link_to root_path, class: 'btn btn-primary mx-2', style: 'padding: 10px 20px; border-radius: 25px;' do %>
          <i class="fa-solid fa-house"></i> Home Page
        <% end %>
      </div>
    <% end %>
  </div>
</div>
