<div class="container">
  <%= simple_form_for [place, plan] do |f| %>
    <%= f.association :trip, label: 'Itinerary:', collection: @trips %>
    <%= button_tag(type: 'submit', class: 'btn btn-primary mb-3', style: 'padding: 10px 20px; border-radius: 25px;') do %>
      <i class="fa-solid fa-plus"></i> Add
    <% end %>
  <% end %>
</div>
<%= link_to new_trip_path, class: 'btn btn-primary mx-2', style: 'padding: 10px 20px; border-radius: 25px;', data: {turbo: false} do %>
  <i class="fa-solid fa-book-atlas"></i> Create new itinerary
<% end %>
